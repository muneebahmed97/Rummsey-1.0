<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fff"
    android:padding="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_bluetooth_on"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bluetooth ON"
            android:layout_weight="1"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_bluetooth_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Paired Devices"
            android:layout_weight="1"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_bluetooth_off"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bluetooth OFF"
            android:layout_weight="1"
            android:textAllCaps="false"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_joystickMode"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:background="@color/colorHighlight"
            android:text="JoyStick Mode"
            android:textAllCaps="false"
            android:textColor="@color/colorFont"
            android:textSize="18sp" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="14dp">

        <!-- row 1 -->

        <android.support.v7.widget.CardView
            android:id="@+id/cv_gpsMode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/colorBtnBG1"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="14dp"
                android:layout_gravity="center_vertical|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS Mode"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorFont"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- row 2 -->

        <android.support.v7.widget.CardView
            android:id="@+id/cv_autoMode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/colorBtnBG2"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="14dp"
                android:layout_gravity="center_vertical|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto Mode"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorFont"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- row 3 -->

        <android.support.v7.widget.CardView
            android:id="@+id/cv_surveillanceMode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/colorBtnBG2"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="14dp"
                android:layout_gravity="center_vertical|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surveillance Mode"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorFont"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- row 4 -->

        <android.support.v7.widget.CardView
            android:id="@+id/cv_gloveMode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/colorBtnBG1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="14dp"
                android:layout_gravity="center_vertical|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Glove Mode"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorFont"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </GridLayout>

</LinearLayout>